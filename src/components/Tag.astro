---
interface Props{
  text:string;
  onclick?:(text:string)=>string;
}

const {text,onclick}=Astro.props;
---

<button class="tag-element" onclick={onclick?onclick(text):""}>
  <span class="tag-icon">
    <span class="icon-text">
      #
    </span>
  </span>
  <p class="tag-text">{text}</p>
</button>
<style>
.tag-element{
  height: 1.5rem;
  border: none;
  border-radius: 5px;
  padding: 0;
  padding-inline-end: 0.5rem;
  background-color: #eee;
  border: 1px solid #ccc;
  box-sizing: content-box;
  cursor: pointer;
  p{
    font-size: 1rem;
  }
  span{
    font-size: 1.25rem;
  }
}

.tag-icon{
  display: inline-flex;
  justify-content: center;
  align-items: center;
  content: "";
  background-color: rgb(180, 204, 240);
  text-align: center;
  width: 1.5rem;
  height: 1.5rem;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  color: #555;
}

.icon-text{
  display: block;
  line-height: 1.5rem;
  text-align: center;
  font-size: 1.25rem;
}

.tag-text{
  display: inline;
  margin: 0;
  user-select: none;
  color: #555;
}
</style>